extends layout
block content

    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Actualizar datos del usuario
                
                form(method='POST' action=`/updateUser/${_id}`)
                    div.form-group
                        label(for='nombre') Nombre:
                        input#nombre.form-control(type='text', placeholder='Nombre' name='nombre' value=user.nombre)
                    div.form-group
                        label(for='email') Correo electrónico:
                        input#email.form-control(type='text', placeholder='Correo electrónico' name='email' value=user.email)
                    div.form-group
                        label(for='paises') País:
                        select(name='pais')
                            each val in paises
                                option(value=`${val._id}`) #{val.nombre}
                    button.btn.btn-primary(type='submit') Actualizar