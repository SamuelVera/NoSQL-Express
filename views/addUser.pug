extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Agregar Usuario
                
                form(method='POST' action=`/addUser`)
                    div.form-group
                        label(for='nombre') Nombre:
                        input#nombre.form-control(type='text', placeholder='Nombre' name='nombre')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='Correo Electr√≥nico' name='email')
                    div.form-group
                        label(for='pais') Paises:
                        select(name='pais')
                            each val in paises
                                option(value=`${val._id}`) #{val.nombre}
                    button.btn.btn-primary(type='submit') Crear Usuario