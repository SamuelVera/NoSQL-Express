extends layout
block content

    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Añadir Tarjeta de Credito
                
                form(method='POST' action=`/addCreditCard/${_id}`)
                    div.form-group
                        label(for='numero') Numero:
                        input#numero.form-control(type='number', placeholder='Número de la Tarjeta' name='numero' min=0)
                    div.form-group
                        label(for='fechaExp') Fecha de Expiración:
                        input#fechaExp.form-control(type='date', name='fechaExp')
                    button.btn.btn-primary(type='submit') Crear